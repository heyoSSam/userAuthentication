<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>Registration Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" 
                           integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" 
                           crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-5">Registration form</h1>
            <% if(typeof(allErrors) != 'undefined') { %>
                <% allErrors.forEach((e) => { %>
                    <div class="center-block text-center" style="color:red">
                        <p> <%= e.msg %></p>
                    </div>
                <% }) %>
            <% } %> 
        <div class="form_div">
            <form action="/user/register" method="POST">
                <div class="mb-3 text-center">
                  <label for="Login" class="form-label">Enter login</label>
                  <input name="login" type="login" class="form-control w-25 center-block" id="registerLoginInput" aria-describedby="loginHelp">
                </div>
                <div class="mb-3 text-center">
                  <label for="exampleInputPassword1" class="form-label">Enter password</label>
                  <input name="password" type="password" class="form-control w-25 center-block" id="registerPasswordInput">
                </div>
                <div class="button_div text-center mt-4">
                    <input type="submit" class="btn btn-success" value="Create Account">
                </div>
            </form>
            <div class="button_div text-center mt-4">
                <a href="http://localhost:8080/user/login" class="btn btn-warning">Get to Login</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" 
            crossorigin="anonymous"></script>
</body>
</html>