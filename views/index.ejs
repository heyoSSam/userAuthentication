<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>Registration Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" 
                           integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" 
                           crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet">
    <script defer src="server.js"></script>
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-5">Login</h1>
        <div class="form_div">
            <% if(typeof(allErrors) != 'undefined') { %>
                <% allErrors.forEach((e) => { %>
                    <div class="center-block text-center" style="color:red">
                        <p> <%= e.msg %></p>
                    </div>
                <% }) %>
            <% } %> 
            <form action="/user/login" method="POST">
                <div class="mb-3 text-center">
                  <label class="form-label">Login</label>
                  <input name="login" type="login" class="form-control w-25 center-block" id="loginField">
                </div>
                <div class="mb-3 text-center">
                  <label class="form-label">Password</label>
                  <input name="password" type="password" class="form-control w-25 center-block" id="passwordField">
                </div>
                <div class="button_div text-center mt-4">
                    <input type="submit" class="btn btn-success " id="logSubmitButton" value="Submit">
                    <a type="button" class="btn btn-warning" href="http://localhost:8080/user/register">Sign up</a>
                </div>
                <div class="text-center mt-4">
                    <% if(typeof(errorMessages) != 'undefined'){ %>
                        <% errorMessages.forEach(i => { %>
                            <%= errorMessages[i] %>
                        <% }) %> <% } %>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" 
            crossorigin="anonymous"></script>
</body>
</html>